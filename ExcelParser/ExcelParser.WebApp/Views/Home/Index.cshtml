@{
    ViewData["Title"] = "Home";
}

<!-- Image and text -->

<div align="center">
    <h2>Выбирете файл</h2>
    
    <form id="uploadForm" method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Upload">
        <div class="input-group" style="text-align: center;">
            <input type="file" id="fileInput" name="file" style="display: none;" />
            <span class="input-group-btn">
                <button class="btn btn-secondary" type="button" id="uploadButton" style="border: none; background-color: transparent; padding: 0;align-content: center">
                    <img src="img/upload.jpg" alt="Upload" width="500" height="300" style="border: none; outline: none;align-self: center"/>
                </button>
            </span>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Загрузить файл</button>
    </form>
</div>



@section Scripts{
    <script>
        document.getElementById("uploadButton").addEventListener("click", function () {
            document.getElementById("fileInput").click();
        });
    </script>
}